---
import Layout from '@/layouts/Layout.astro'
import Navbar from '@/components/layout/Navbar.tsx'
import Hero from '@/components/sections/Hero.astro'
import Footer from '@/components/layout/Footer.astro'
---

<Layout
  title="NatNails - Cursos Online de Nail Art"
  description="Academia especializada en cursos online de nail art, caricatura y técnicas avanzadas. Aprende con Natalia y transforma tu pasión en profesión."
>
  <Navbar transparent={true} client:load />

  <Hero />

  <main id="cursos" class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="mb-8 text-3xl font-bold text-gray-900">Nuestros Cursos</h2>
      <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
        <div
          class="rounded-lg border border-pink-200 p-6 transition-shadow hover:shadow-lg"
        >
          <h3 class="mb-4 text-xl font-semibold text-pink-600">
            Caricatura Básico
          </h3>
          <p class="text-gray-600">
            Aprende las técnicas fundamentales del nail art y caricatura en
            uñas.
          </p>
        </div>
        <div
          class="rounded-lg border border-pink-200 p-6 transition-shadow hover:shadow-lg"
        >
          <h3 class="mb-4 text-xl font-semibold text-pink-600">
            Arte del Relieve
          </h3>
          <p class="text-gray-600">
            Domina las técnicas avanzadas de relieve y texturas en nail art.
          </p>
        </div>
        <div
          class="rounded-lg border border-pink-200 p-6 transition-shadow hover:shadow-lg"
        >
          <h3 class="mb-4 text-xl font-semibold text-pink-600">
            Técnicas Profesionales
          </h3>
          <p class="text-gray-600">
            Manicura, balance, híbrido y esterilización profesional.
          </p>
        </div>
      </div>

      <div class="mt-12">
        <a
          href="https://natnails.cloud"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block rounded-full bg-pink-600 px-8 py-3 font-semibold text-white transition-all duration-300 hover:scale-105 hover:bg-pink-700"
        >
          Ver Todos los Cursos
        </a>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
