---
import Layout from '@/layouts/Layout.astro'
import Navbar from '@/components/layout/Navbar'
import Footer from '@/components/layout/Footer.astro'
import CourseHero from '@/components/courselanding/CourseHero.astro'
import ProblemSection from '@/components/courselanding/ProblemSection.astro'
import SolutionSection from '@/components/courselanding/SolutionSection.astro'
import BenefitsSection from '@/components/courselanding/BenefitsSection.astro'
import BonusSection from '@/components/courselanding/BonusSection.astro'
import FAQSection from '@/components/courselanding/FAQSection.astro'
import PricingSection from '@/components/courselanding/PricingSection.astro'

const price = {
  original: 1499,
  discount: 1199,
  savings: 300,
}

const mercadoPagoLink =
  'https://www.mercadopago.com.mx/integrations/v1/web-payment-checkout.js'
const preferenceId = '217243359-01f367a5-4aba-4b43-8b90-daadc7d41105'
const paypalLink = 'https://www.paypal.com/ncp/payment/YOUR_PAYPAL_BUTTON_ID'
---

<Layout
  title="Curso Online de Caricatura - Nivel Básico I | NatNails"
  description="Aprende caricatura en uñas desde cero. Curso online con asesoría personalizada. 8 semanas, plataforma Telegram. Sin experiencia previa necesaria."
  image="https://natnails.cloud/wp-content/uploads/2023/11/natnails-home-2048x1365.webp"
>
  <Navbar transparent={true} client:load />

  <CourseHero />
  <ProblemSection />
  <SolutionSection />
  <BenefitsSection />
  <BonusSection />
  <FAQSection />
  <PricingSection 
    price={price}
    mercadoPagoLink={mercadoPagoLink}
    preferenceId={preferenceId}
    paypalLink={paypalLink}
  />

  <Footer />
</Layout>
