---
// src/components/sections/ReviewsSection.astro
export interface Props {
  title?: string
  subtitle?: string
  className?: string
}

const {
  title = 'Lo que dicen mis estudiantes',
  subtitle = 'Reseñas reales de personas que han transformado su pasión en profesión',
  className = '',
} = Astro.props
---

<section class={`py-16 bg-gray-50 ${className}`}>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    {
      (title || subtitle) && (
        <div class="mb-12 text-center">
          {title && (
            <h2 class="mb-4 text-3xl font-bold text-gray-900">{title}</h2>
          )}
          {subtitle && (
            <p class="mx-auto max-w-3xl text-lg text-gray-600">{subtitle}</p>
          )}
        </div>
      )
    }

    <div class="overflow-hidden rounded-2xl bg-white p-6 shadow-lg">
      <!-- Elfsight Google Reviews -->
      <div
        class="elfsight-app-a82325bd-5ca4-437d-b412-0468d970fe41"
        data-elfsight-app-lazy
      >
      </div>
    </div>
  </div>
</section>

<script>
  // Load Elfsight platform script if not already loaded
  if (
    !document.querySelector('script[src*="elfsight.com/platform/platform.js"]')
  ) {
    const script = document.createElement('script')
    script.src = 'https://static.elfsight.com/platform/platform.js'
    script.async = true
    document.head.appendChild(script)
  }
</script>
